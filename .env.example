NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=public-anon-key
OPENAI_API_KEY=sk-your-openai-secret
POSTHOG_PUBLIC_KEY=

# Security Configuration
PRODUCTION_DOMAIN=https://your-production-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://your-staging-domain.com

# Enhanced CORS Configuration
# Pattern-based origins for preview deployments (e.g., Vercel preview URLs)
PREVIEW_ORIGIN_PATTERN=https://preview-*.vercel.app,https://*.netlify.app

# CORS Security Level: strict (production), standard (staging), permissive (development)
CORS_SECURITY_LEVEL=strict

# Enable CORS monitoring and violation logging
ENABLE_CORS_MONITORING=true

# Logging Configuration  
LOG_LEVEL=info
ENABLE_ERROR_REPORTING=true
