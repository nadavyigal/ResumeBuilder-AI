# ResumeBuilder AI Environment Configuration
# Copy this file to .env.local and replace with your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# SUPABASE CONFIGURATION (Required)
# =============================================================================

# Your Supabase project URL
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public, safe for client-side)
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (secret, server-side only)
# Get this from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
# WARNING: Keep this secret, never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# OPENAI CONFIGURATION (Required)
# =============================================================================

# OpenAI API key for resume generation
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI model to use (optional, defaults to gpt-3.5-turbo)
OPENAI_MODEL=gpt-3.5-turbo

# =============================================================================
# ANALYTICS CONFIGURATION (Optional)
# =============================================================================

# PostHog project API key for analytics
# Get this from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here

# PostHog host (optional, defaults to US)
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
NODE_ENV=development

# Application URL (used for redirects and API calls)
NEXT_PUBLIC_APP_URL=http://localhost:3000
